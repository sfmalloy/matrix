#############################################################
# Sean Malloy                                               #
# Matrix Makefile                                           #
#############################################################

#############################################################
# Variables                                                 #
#############################################################

# C++ compiler
CXX      := g++

# C++ compiler flags

# Debugging
# CXXFLAGS := -g -Wall

# Release
CXXFLAGS := -O3 -Wall

#############################################################
# Rules                                                     #
#############################################################

all: driver.out

driver.out: main.cpp
	$(CXX) $(CXXFLAGS) $^ -o $@

matrix: main.cpp
	sudo $(CXX) $(CXXFLAGS) $^ -o /usr/bin/$@

#############################################################

.PHONY: *.out

clean :
	@$(RM) *.out
	@$(RM) *.exe
	@$(RM) *.o
	@$(RM) *~ 

#############################################################
