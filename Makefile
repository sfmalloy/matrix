#############################################################
# Variables                                                 #
#############################################################

# C++ compiler
CXX      := g++

# C++ compiler flags
# CXXFLAGS := -g -Wall
CXXFLAGS := -O3 -Wall

#############################################################
# Rules                                                     #
#############################################################

driver: driver.cpp 
	$(CXX) $(CXXFLAGS) $^ -o $@

#############################################################

.PHONY: driver

clean :
	@$(RM) driver
	@$(RM) *.o
	@$(RM) *~ 

